[Unit]
Description=Dropwizard [<%= @name %>] Service
After=syslog.target network.target

[Service]
Type=simple
User=<%= @user %>
Group=<%= @group %>
EnvironmentFile=-/etc/sysconfig/dropwizard_<%= @name %>
ExecStart=/bin/java $JAVA_OPTS -jar <%= @_jar_file %> server "<%= @config_path %>/<%= @name %>.yaml"
Restart=on-failure
RestartSec=30s

[Install]
WantedBy=multi-user.target

